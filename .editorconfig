[*]
charset=utf-8
end_of_line=crlf
insert_final_newline=true
indent_style=tab
tab_width=4

[{composer.lock,.eslintrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2

[.editorconfig]
indent_style=space
indent_size=4

[{*.ts,*.ats}]
indent_style=space
indent_size=4

[{tsconfig.app.json,tsconfig.e2e.json,tsconfig.spec.json,tsconfig.json}]
indent_style=space
indent_size=2

[{*.module,*.hphp,*.phtml,*.php5,*.php4,*.php,*.inc}]
indent_style=space
indent_size=4

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

[{*.mkd,*.markdown,*.md}]
indent_style=space
indent_size=4

